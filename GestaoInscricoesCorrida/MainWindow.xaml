<Window x:Class="GestaoInscricoesCorrida.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestaoInscricoesCorrida"
        mc:Ignorable="d"
        Title="Gerenciador de Corrida Beneficente" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Nome Completo:" FontWeight="Bold"/>
            <TextBox x:Name="txtNome" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <Label Content="CPF:" FontWeight="Bold"/>
                    <TextBox x:Name="txtCpf" Margin="0,0,0,10"/>
                    <Label Content="Email:" FontWeight="Bold"/>
                    <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Label Content="Telefone:" FontWeight="Bold"/>
                    <TextBox x:Name="txtTelefone" Margin="0,0,0,10"/>
                    <Label Content="Idade:" FontWeight="Bold"/>
                    <TextBox x:Name="txtIdade" Margin="0,0,0,10"/>
                </StackPanel>
            </Grid>

            <Label Content="Valor da Inscrição/Doação:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbValorInscricao" Margin="0,0,0,15"/>

            <Button x:Name="btnCadastrar" Content="Cadastrar Participante" Click="BtnCadastrar_Click" Padding="5" FontSize="14"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="dgParticipantes" Margin="0,15" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nº" Binding="{Binding NumeroInscricao}"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="Auto"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="Auto"/>
                <DataGridTextColumn Header="Valor Pago" Binding="{Binding ValorInscricao, StringFormat=C}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2">
            <Button x:Name="btnRemover" Content="Remover Participante Selecionado" Click="BtnRemover_Click" Padding="5" Margin="0,0,0,10"/>
            <Separator/>
            <TextBlock x:Name="txtTotal" FontWeight="Bold" FontSize="16" Margin="0,10,0,5"/>
            <TextBlock x:Name="txtTotalArrecadado" FontWeight="Bold" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
